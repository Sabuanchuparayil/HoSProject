{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build"
  },
  "deploy": {
    "startCommand": "npx serve -s dist",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "NEVER"
  }
}
